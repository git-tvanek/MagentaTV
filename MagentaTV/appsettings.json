{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.HttpLogging": "Information",
      "MagentaTV": "Information",
      "MagentaTV.Services.TokenStorage": "Information"
    }
  },
  "AllowedHosts": "*",

  "MagentaTV": {
    "BaseUrl": "https://czgo.magio.tv",
    "ApiVersion": "v2",
    "UserAgent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36 MagioGO/4.0.25",
    "DeviceName": "Android-STB",
    "DeviceType": "OTT_STB",
    "Quality": "p5",
    "Language": "cz",
    "TimeoutSeconds": 30,
    "RetryAttempts": 3,
    "CacheExpirationMinutes": 15
  },

  "TokenStorage": {
    "StoragePath": "data",
    "KeyFilePath": "data/token.key",
    "AutoSave": true,
    "AutoLoad": true,
    "TokenExpirationHours": 24,
    "ClearOnStartup": false,
    "RefreshIntervalMinutes": 30,
    "RefreshBeforeExpiryMinutes": 5,
    "MaxRefreshAttempts": 3,
    "EnableBackup": true,
    "BackupRetentionCount": 3
  },

  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:8080",
      "https://localhost:3000",
      "https://localhost:8080"
    ]
  },

  "RateLimit": {
    "PermitLimit": 100,
    "WindowMinutes": 1,
    "QueueProcessingOrder": "OldestFirst",
    "QueueLimit": 10
  },

  "Cache": {
    "DefaultExpirationMinutes": 15,
    "ChannelsExpirationMinutes": 60,
    "EpgExpirationMinutes": 30,
    "StreamUrlExpirationMinutes": 5
  },

  "Api": {
    "Title": "MagentaTV API",
    "Version": "v1",
    "Description": "API wrapper pro MagentaTV slu≈æby s persistent token storage",
    "ContactName": "MagentaTV API Support",
    "ContactEmail": "support@example.com"
  },

  "HealthChecks": {
    "Enabled": true,
    "DetailedErrors": false,
    "TimeoutSeconds": 10
  }
}