{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.AspNetCore.HttpLogging": "Debug",
      "Microsoft.AspNetCore.Hosting": "Information",
      "Microsoft.AspNetCore.Routing": "Debug",
      "System.Net.Http.HttpClient": "Information",
      "MagentaTV": "Debug",
      "MagentaTV.Controllers": "Debug",
      "MagentaTV.Services": "Debug",
      "MagentaTV.Middleware": "Debug",
      "MagentaTV.Services.TokenStorage": "Debug"
    }
  },

  "MagentaTV": {
    "TimeoutSeconds": 60,
    "RetryAttempts": 1,
    "BaseUrl": "https://czgo.magio.tv",
    "ApiVersion": "v2",
    "CacheExpirationMinutes": 1
  },

  "TokenStorage": {
    "StoragePath": "data/dev",
    "KeyFilePath": "data/dev/token.key",
    "AutoSave": true,
    "AutoLoad": true,
    "TokenExpirationHours": 48,
    "ClearOnStartup": false,
    "RefreshIntervalMinutes": 15,
    "RefreshBeforeExpiryMinutes": 10,
    "MaxRefreshAttempts": 2,
    "EnableBackup": true,
    "BackupRetentionCount": 5
  },

  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:3001",
      "http://localhost:8080",
      "http://localhost:8081",
      "https://localhost:3000",
      "https://localhost:3001",
      "https://localhost:8080",
      "https://localhost:8081",
      "http://127.0.0.1:3000",
      "http://127.0.0.1:8080"
    ],
    "AllowedMethods": [ "GET", "POST", "PUT", "DELETE", "OPTIONS", "PATCH" ],
    "AllowedHeaders": [ "*" ],
    "AllowCredentials": true
  },

  "RateLimit": {
    "PermitLimit": 1000,
    "WindowMinutes": 1,
    "QueueProcessingOrder": "OldestFirst",
    "QueueLimit": 50
  },

  "Cache": {
    "DefaultExpirationMinutes": 1,
    "ChannelsExpirationMinutes": 5,
    "EpgExpirationMinutes": 2,
    "StreamUrlExpirationMinutes": 1
  },

  "HealthChecks": {
    "Enabled": true,
    "DetailedErrors": true,
    "TimeoutSeconds": 30
  },

  "Api": {
    "Title": "MagentaTV API (Development)",
    "Version": "v1-dev",
    "Description": "Development instance of MagentaTV API wrapper with debug features",
    "ContactName": "MagentaTV API Development",
    "ContactEmail": "dev@example.com"
  },

  "Development": {
    "EnableSwagger": true,
    "EnableDetailedErrors": true,
    "EnableRequestResponseLogging": true,
    "EnableDebugEndpoints": true,
    "MockExternalServices": false,
    "SimulateSlowRequests": false,
    "LogSensitiveData": false
  }
}